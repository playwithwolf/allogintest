# 支付宝应用配置
# 请复制此文件为 .env 并填入真实的配置信息

# 支付宝应用ID（必填）
ALIPAY_APP_ID=your_app_id_here

# 应用私钥（必填）
# 注意：这里填入的是私钥内容，不包含 -----BEGIN RSA PRIVATE KEY----- 等标识
ALIPAY_APP_PRIVATE_KEY=your_app_private_key_here

# 支付宝公钥（必填）
# 注意：这里填入的是支付宝公钥内容，不包含 -----BEGIN PUBLIC KEY----- 等标识
ALIPAY_PUBLIC_KEY=your_alipay_public_key_here

# 支付宝网关地址
# 沙箱环境（开发测试）
ALIPAY_GATEWAY_URL=https://openapi.alipaydev.com/gateway.do
# 生产环境（正式上线时使用）
# ALIPAY_GATEWAY_URL=https://openapi.alipay.com/gateway.do

# OAuth授权网关地址
# 沙箱环境（开发测试）
ALIPAY_OAUTH_GATEWAY_URL=https://openauth.alipaydev.com/oauth2/publicAppAuthorize.htm
# 生产环境（正式上线时使用）
# ALIPAY_OAUTH_GATEWAY_URL=https://openauth.alipay.com/oauth2/publicAppAuthorize.htm

# 服务器配置
PORT=8000
HOST=0.0.0.0

# 应用环境
ENVIRONMENT=development
# ENVIRONMENT=production

# 日志级别
LOG_LEVEL=INFO

# 安全配置
SECRET_KEY=your_secret_key_here

# 数据库配置（如果需要）
# DATABASE_URL=sqlite:///./app.db
# DATABASE_URL=postgresql://user:password@localhost/dbname
# DATABASE_URL=mysql://user:password@localhost/dbname